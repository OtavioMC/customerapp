{
    "name": "otaviomc/customerapp",
    "description": "Uma aplicação web que permite manter atualizado o cadastro de seus clientes.",
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "customerapp\\src\\": "src/",
            "Dotenv\\": ".env"
        }
    },
    "authors": [
        {
            "name": "OtavioMC",
            "email": "mendoncacostaotavio@gmail.com"
        }
    ],
    "require-dev": {
        "kahlan/kahlan": "^5.2",
        "captainhook/captainhook": "^5.21",
        "robmorgan/phinx": "^0.16.0",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test": "kahlan",
        "analyze" : "php vendor/bin/phpstan analyse",
        "phinx"   : "php vendor/bin/phinx"
    },
    "config": {
        "allow-plugins": {
            "captainhook/plugin-composer": true
        }
    },
    "require": {
        "vlucas/phpdotenv": "^5.6",
        "twbs/bootstrap": "5.3.2"
    }
}
